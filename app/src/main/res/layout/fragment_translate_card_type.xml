<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="320dp"
        android:padding="20dp">

        <ImageView
            android:id="@+id/translateCardImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/content_description_card_image"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:visibility="visible"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:id="@+id/translateCardWordContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/translateCardImageView"
            tools:layout_editor_absoluteX="20dp">

            <TextView
                android:id="@+id/translateCardWordTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textStyle="bold"
                tools:text="train" />

            <ImageButton
                android:id="@+id/translateCardPlayButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/content_description_play_pronunciation"
                android:padding="8dp"
                android:src="@drawable/ic_volume"
                app:tint="?attr/colorPrimary"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <TextView
            android:id="@+id/translateCardHintTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_info"
            android:gravity="center_vertical"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/translateCardWordContainer"
            app:drawableTint="?attr/colorOnSurfaceVariant"
            tools:text="подсказка, что слово используется в значении 'поезд'" 
            tools:visibility="visible" />

        <TextView
            android:id="@+id/translateCardTranslationTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/translateCardHintTextView"
            tools:text="поезд"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/translateCardShowAnswerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:text="@string/translate_card_show_translation"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/translateCardTranslationTextView"
            tools:layout_editor_absoluteY="400dp" />

        <LinearLayout
            android:id="@+id/translateCardAnswerButtonsGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/translateCardTranslationTextView"
            tools:visibility="visible">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/translateCardHardButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/translate_card_answer_hard"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/translateCardMediumButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/translate_card_answer_medium"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/translateCardEasyButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translate_card_answer_easy"
                android:textAllCaps="false" />
        </LinearLayout>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/translateCardLoadingIndicator"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/translateCardShowAnswerButton"
            app:layout_constraintEnd_toEndOf="@id/translateCardShowAnswerButton"
            app:layout_constraintStart_toStartOf="@id/translateCardShowAnswerButton"
            app:layout_constraintTop_toTopOf="@id/translateCardShowAnswerButton"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
