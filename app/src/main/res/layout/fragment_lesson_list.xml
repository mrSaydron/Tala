<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/lessonNavigationBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp"
        app:cardBackgroundColor="@color/lesson_nav_bg"
        app:cardCornerRadius="36dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/lessonNavButton"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1.6"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/lesson_list_title"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="@color/black"
                android:letterSpacing="0.01"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_lessons_nav"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="26dp"
                app:iconTint="@color/black"
                app:rippleColor="@color/white"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="0dp"
                android:backgroundTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/collectionNavButton"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="0.9"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="@color/lesson_nav_bg"
                android:contentDescription="@string/lesson_nav_collections"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_collections_nav"
                app:iconSize="26dp"
                app:iconTint="@color/black"
                app:rippleColor="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/wordNavButton"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="0.9"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="@color/lesson_nav_bg"
                android:contentDescription="@string/lesson_nav_word"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_translate"
                app:iconSize="26dp"
                app:iconTint="@color/black"
                app:rippleColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/settingsNavButton"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="0.9"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="@color/lesson_nav_bg"
                android:contentDescription="@string/lesson_nav_settings"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_settings"
                app:iconSize="26dp"
                app:iconTint="@color/black"
                app:rippleColor="@color/white" />

    </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lessonRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingBottom="136dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lessonNavigationBar"
        tools:listitem="@layout/item_lesson_entry" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/lessonAddFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/lesson_list_add_button"
        app:backgroundTint="@color/lesson_nav_bg"
        app:srcCompat="@drawable/ic_add"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/lessonListProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lessonListEmptyState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/lesson_list_empty_state"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>

